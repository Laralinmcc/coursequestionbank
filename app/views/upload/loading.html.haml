%div#upload_form
    = form_tag '', :multipart => true, :class => 'form-horizontal' do
        %div.form-group
            %div.col-xs-5
            %div.col-xs-7
                = file_field_tag :ruql_file, :id => 'file_upload', :class => 'text-center'
        %div.form-group
            %div.col-xs-12.text-center
                = submit_tag 'Upload File', :class => 'btn btn-primary'
%div#loading_img
    %div.col-xs-3
    %div.col-xs-6
        = image_tag('uploading.gif')

